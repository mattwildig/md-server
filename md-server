#!/usr/bin/env ruby

require 'sinatra'
require 'rdiscount'

set :views, Dir.getwd
enable :run

get "/" do
  @files = Dir["*.{md,markdown,mkd}"]
  erb :index
end

get %r{/(.*).(md|markdown|mkd)} do
  markdown params[:captures][0].to_sym
end

__END__

@@index

<ul>
<% @files.each do |f| %>
  <%="<li><a href='#{f}'>#{f}</a></li>"%>
<%end%>
</ul>
  